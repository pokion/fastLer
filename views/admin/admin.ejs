<!DOCTYPE html>
<html>
<head>
	<title>-ADMIN-PANEL-</title>
	<meta charset="utf-8">
</head>
<body>
	<div id="topBar">
		
		<% for(var i=0; i<strony.length; i++) {%>
			<button class="pageBtn"><%= strony[i] %></button>
		<% } %>
	</div>

	<div class="container">
		 <iframe frameborder="0" id="pages" onload="resizeIframe(this)"></iframe>
	</div>
	

<style type="text/css">
	*{
		margin: 0px;
		padding: 0px;
	}
	#topBar{
		top: 0px;
		left: 0px;
		height: 50px;
		width: 100%;
		background-color: grey;
	}
	.pageBtn{
		height: 50px;
		width: 75px;
		background-color: #fefe;
		margin-right: 10px;
	}
	.container{
		position: relative;
	    width: 100%;
	    height: 0;
	    
	}
	#pages{
	    position: absolute;
	    top: 0;
	    left: 0;
	    width: 100%;
	    height: 100%;
 }
</style>

<script type="text/javascript" src="jquery.min.js"></script>
<script type="text/javascript">
	let iframe = document.getElementById('pages');
	iframe.src = '/homeAdmin'

	$('.pageBtn').click((e)=>{
		iframe.src = '/'+e.currentTarget.innerHTML+'Admin'
	})

	function resizeIframe(obj) {
   		obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
  	}
</script>
</body>
</html>